<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="koing.kosta180.mapper.StoreMapper">

	<select id="getTime" resultType="string">
		select sysdate from dual
	</select>

	<!-- 지역별 상점리스트 가져오기 -->
	<select id="locationStoreList" parameterType="String" resultType="StoreVO">
		select * from store where s_location_no = #{s_location_no}
	</select>
	
	<!-- 카테고리별 상점리스트 가져오기  -->
	<select id="categoryStoreList">
		select * from store where = s_category = #{s_category}
	</select>


</mapper>